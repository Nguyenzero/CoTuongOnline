<?xml version="1.0" encoding="UTF-8"?>

    <?import javafx.geometry.Insets?>
    <?import javafx.scene.control.Button?>
    <?import javafx.scene.control.Label?>
    <?import javafx.scene.control.TableColumn?>
    <?import javafx.scene.control.TableView?>
    <?import javafx.scene.control.TextField?>
    <?import javafx.scene.layout.BorderPane?>
    <?import javafx.scene.layout.HBox?>
    <?import javafx.scene.layout.VBox?>

    <BorderPane style="-fx-background-color: linear-gradient(to bottom, #ecf0f1, #ffffff);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.RoomListController">

        <!-- Tiêu đề -->
        <top>
            <VBox alignment="CENTER" spacing="5">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 20 0 5 0;" text="🎮 Danh sách phòng" />
                <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Chọn một phòng để tham gia hoặc làm mới danh sách" />
            </VBox>
        </top>

        <!-- Nội dung -->
        <center>
            <VBox alignment="CENTER" spacing="15">
                <padding>
                    <Insets bottom="20" left="30" right="30" top="20" />
                </padding>

                <!-- Thanh tìm kiếm -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 10 0;">
                    <TextField fx:id="searchField" prefHeight="32.0" prefWidth="638.0" promptText="Nhập tên phòng cần tìm..." style="-fx-background-radius: 8; -fx-padding: 6 10; -fx-border-color: #bdc3c7; -fx-border-radius: 8;" />
                    <Button fx:id="searchButton" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 6 15; -fx-cursor: hand;" text="🔍 Tìm kiếm" />
                </HBox>

                <!-- Khung chứa bảng -->
                <VBox prefHeight="420" prefWidth="720" spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #dce1e6; -fx-border-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

                    <TableView fx:id="roomTable" prefHeight="360" prefWidth="680" style="-fx-background-color: transparent;">
                        <columns>
                            <TableColumn fx:id="nameColumn" prefWidth="300" text="Tên phòng" />
                            <TableColumn fx:id="hostColumn" prefWidth="250" text="Chủ phòng" />
                            <TableColumn fx:id="statusColumn" prefWidth="150" text="Trạng thái" />
                        </columns>
                    </TableView>


                </VBox>
            </VBox>
        </center>

        <!-- Các nút điều khiển -->
        <bottom>
            <HBox alignment="CENTER" spacing="25">
                <padding>
                    <Insets bottom="25" top="15" />
                </padding>
                <Button fx:id="refreshButton"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20; -fx-cursor: hand;"
                        text="🔄 Làm mới" />
                <Button fx:id="backButton"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20; -fx-cursor: hand;"
                        text="⬅ Quay lại" />
                <Button fx:id="joinRoomButton"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20; -fx-cursor: hand;"
                        text="🎮 Vào phòng" />
            </HBox>
        </bottom>


    </BorderPane>